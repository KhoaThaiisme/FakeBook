{% extends "base.jinja" %}

{% block content %}
    <h2>Sign In</h2>
    <form action="" method="post" novalidate>
    {{ form.hidden_tag() }}
    <p>
      {{ form.username.label }}<br>
      {{ form.username(size=32) }}
    </p>
    <p>
      {{ form.password.label }}<br>
      {{ form.password(size=32) }}
      {% for error in form.password.errors %}
        <span class="err-message">{{ error }}</span>
      {% endfor %}
    </p>
    <p>{{ form.submit() }}</p>
    </form>
{% endblock %}  