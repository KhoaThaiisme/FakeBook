{% extends 'base.jinja' %}

{% block content %}
    <h2>Post</h2>
    <form action="" method="post" > # this method has to be singular all the time
    {{ form.hidden_tag() }}
    <p>
      {{ form.body.label }}<br>
      {{ form.body(size=32) }}
      {% for error in form.body.errors %}
        <span class="err-message">{{ error }}</span>
      {% endfor %}
    </p>
    <p>{{ form.submit() }}</p>
    </form>
{% endblock  %}